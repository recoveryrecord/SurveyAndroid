<resources>

    <!-- Base application theme. -->
    <style name="Widget.SurveyAndroid" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="firstSegmentBackground">@drawable/first_segment_background</item>
        <item name="middleSegmentBackground">@drawable/middle_segment_background</item>
        <item name="lastSegmentBackground">@drawable/last_segment_background</item>
        <item name="segmentTextColor">@color/selectable_rb_text_color</item>
        <item name="paddingSmall">5dp</item>
        <item name="paddingLarge">10dp</item>
    </style>

    <style name="Widget.SurveyAndroid.RecyclerView">
        <item name="background">@color/lighter_gray</item>
    </style>

    <style name="Widget.SurveyAndroid.HeaderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">?paddingSmall</item>
    </style>

    <style name="Widget.SurveyAndroid.QuestionCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">?paddingSmall</item>
    </style>

    <style name="Widget.SurveyAndroid.QuestionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">?paddingLarge</item>
        <item name="android:paddingBottom">?paddingLarge</item>
    </style>

    <style name="Widget.SurveyAndroid.NextButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:text">@string/next</item>
    </style>

    <style name="Widget.SurveyAndroid.CheckboxContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.SurveyAndroid.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:hint">@string/please_specify</item>
        <item name="hintAnimationEnabled">true</item>
    </style>

    <style name="Widget.SurveyAndroid.TextAreaEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">4</item>
        <item name="android:inputType">textMultiLine|textCapSentences|textAutoCorrect</item>
        <item name="android:gravity">top|start</item>
    </style>

    <style name="Widget.SurveyAndroid.SegmentRadioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">?paddingSmall</item>
    </style>

    <style name="Widget.SurveyAndroid.SegmentedRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:padding">?paddingSmall</item>
        <item name="android:background">?firstSegmentBackground</item>
        <item name="android:textColor">?segmentTextColor</item>
    </style>

    <style name="Widget.SurveyAndroid.SegmentTagsContainer">
        <item name="android:paddingTop">?paddingSmall</item>
    </style>

    <style name="Widget.SurveyAndroid.SegmentTag">
        <item name="android:textColor">@color/gray_text_color</item>
    </style>

    <style name="Widget.SurveyAndroid.SubmitSpacer">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Widget.SurveyAndroid.SubmitButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
